<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="no_domain.phraseupproject.ChallengeActivity"
    android:background="#427FE8">

    <TextView android:text="EN -> PL" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/menuLettersSize"
        android:textColor="@color/menuLetters"
        android:id="@+id/activity_challenge_textViewTop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_challenge_textViewTop">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Wrong"
            android:id="@+id/activity_challenge_textView1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="15dp"
            android:clickable="true"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/buttonLetters"
            android:textSize="@dimen/bottomButtonLettersSize"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Wrong"
            android:id="@+id/activity_challenge_textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="15dp"
            android:clickable="true"
            android:layout_marginTop="110dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/buttonLetters"
            android:textSize="@dimen/bottomButtonLettersSize"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Good"
            android:id="@+id/activity_challenge_textView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:clickable="true"
            android:layout_marginBottom="110dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/buttonLetters"
            android:textSize="@dimen/bottomButtonLettersSize"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Wrong"
            android:id="@+id/activity_challenge_textView4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:clickable="true"
            android:layout_marginBottom="110dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/buttonLetters"
            android:textSize="@dimen/bottomButtonLettersSize"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:id="@+id/activity_challenge_textViewCenter"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:padding="30dp"
            android:textSize="@dimen/menuLettersSize"
            android:textColor="@color/menuLetters"/>
    </RelativeLayout>

</RelativeLayout>

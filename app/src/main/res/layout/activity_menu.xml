    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O co chodzi?"
        android:id="@+id/activity_menu_buttonMenu1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nowe Wyzwanie"
        android:id="@+id/activity_menu_buttonMenu2"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twoje punkty"
        android:id="@+id/activity_menu_buttonMenu3"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WyjdÅº"
        android:id="@+id/activity_menu_buttonMenu4"

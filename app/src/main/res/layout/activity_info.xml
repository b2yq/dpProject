<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#A97DC9"
    tools:context="no_domain.phraseupproject.InfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phrase UP!"
        android:id="@+id/activity_info_title_textView"
        android:textSize="@dimen/menuLettersSize"
        android:textColor="@color/menuLetters"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rozumiem"
        android:id="@+id/activity_info_button_back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/buttonLetters"
        android:textSize="@dimen/bottomButtonLettersSize"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/activity_info_button_back"
        android:layout_below="@+id/activity_info_title_textView"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Jest to aplikacja, która pozwoli Ci powtórzyć angielskie 'phrasal verbs' przed egzaminem gimnazjalnym - bez nerwów i pośpiechu, kiedykolwiek i gdziekolwiek zechcesz."
            android:id="@+id/activity_info_info_text"
            android:padding="5dp"
            android:textColor="@color/menuLetters"
            android:singleLine="false"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="20dp" />


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:shrinkColumns="1">
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="1. EN -> PL"
                    android:id="@+id/textView2"
                    android:textColor="@color/menuLetters"
                    android:gravity="left|center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="- twoim zadaniem jest wybranie właściwego tłumaczenia wylosowanego angielskiego zwrotu"
                    android:id="@+id/textView21"
                    android:textColor="@color/menuLetters"
                    android:gravity="left" />
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="2. PL -> EN"
                    android:id="@+id/textView3"
                    android:textColor="@color/menuLetters"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="- (niedostępne w tej wersji)"
                    android:id="@+id/textView31"
                    android:textColor="@color/menuLetters"
                    />
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="3. Motywator "
                    android:id="@+id/textView4"
                    android:textColor="@color/menuLetters"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="- cytaty motywujące (niedostępne w tej wersji)"
                    android:id="@+id/textView41"
                    android:textColor="@color/menuLetters"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>

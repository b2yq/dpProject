<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/successBackground"
    tools:context="no_domain.phraseupproject.SuccessActivity"
    android:id="@+id/activity_result_layout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text\nTest\nTest testowy"
            android:id="@+id/activity_result_TitleTextView1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/menuLettersSize"
            android:textColor="@color/menuLetters"
            android:gravity="center" />

        <TextView
            android:text="Twój obecny wynik to:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/menuLettersSize"
            android:textColor="@color/menuLetters"
            android:id="@+id/activity_result_TitleTextView2"
            android:layout_above="@+id/activity_result_ResultValueTextView"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/activity_result_ResultValueTextView"
            android:textAlignment="center"
            android:singleLine="true"
            android:textColor="@color/menuLetters"
            android:textSize="100dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powrót"
            android:id="@+id/activity_result_button_back" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spróbuj jeszcze raz"
            android:id="@+id/activity_result_button_once_again"/>
    </LinearLayout>

</RelativeLayout>
